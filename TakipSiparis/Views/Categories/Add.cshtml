@model TakipSiparis.Models.Categories
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add</h2>

<div class="container">

    @using (Html.BeginForm("Add", "Categories", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.CategoryName)
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Note)
            @Html.TextBoxFor(x => x.Note, new { @class = "form-control" })
        </div>
        <div>
            <button class="btn btn-success">Add Category</button>
        </div>

    }
</div>
