@model IEnumerable<TakipSiparis.Models.PaymentMethod>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Payment Methods</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <td>
                ID
            </td>
            <td>
                Decision
            </td>

            <td>Delete</td>
            <td>Update</td>
        </tr>


    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modele => item.ID)</td>
                <td>@Html.DisplayFor(modele => item.PayMeth)</td>
                <td>Delete</td>
                <td>Update</td>

            </tr>
        }
    </tbody>
</table>

<input class="btn btn-success" style="" type="button" value="Add New Method" onclick="location.href='@Url.Action("Add", "Paymethods")'" />